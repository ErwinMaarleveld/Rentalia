<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rentalia.RegisterPage"
             BackgroundImage="background2.jpg">
    <ContentPage.Content>
        <ScrollView Orientation='Vertical'>

            <StackLayout VerticalOptions="Center"
                                 HorizontalOptions="Center">


                <Entry Placeholder="E-mail"
                               FontSize="Small"
                               PlaceholderColor="Black"
                               BackgroundColor="OrangeRed"
                               x:Name="email"/>
                <Entry Placeholder="Voornaam"
                               FontSize="Small"
                               PlaceholderColor="Black"
                               BackgroundColor="OrangeRed"
                               x:Name="voornaam"/>
                <Entry Placeholder="Tussenvoegsel"
                               FontSize="Small"
                               PlaceholderColor="Black"
                               BackgroundColor="OrangeRed"
                               x:Name="tussen"/>
                <Entry Placeholder="Achternaam"
                               FontSize="Small"
                               PlaceholderColor="Black"
                               BackgroundColor="OrangeRed"
                               x:Name="achternaam"/>
                <Entry IsPassword="True"
                               FontSize="Small"
                               Placeholder="Password"
                               PlaceholderColor="Black"
                               BackgroundColor="OrangeRed"
                               x:Name="pass1"/>
                <Entry IsPassword="True"
                               FontSize="Small"
                               Placeholder="Retype Password"
                               PlaceholderColor="Black"
                               BackgroundColor="OrangeRed"
                               x:Name="pass2"/>
                <Button Text="Register"
                                FontSize="Small"
                                BackgroundColor="OrangeRed"
                                BorderColor="Black"
                                BorderWidth="1"
                                Clicked="OnClickHub"/>
                <Button Text="I'm already member"
                                FontSize="Small"
                                BackgroundColor="OrangeRed"
                                BorderColor="Black"
                                BorderWidth="1"
                                Clicked="OnClickLogin"/>

            </StackLayout>
        </ScrollView>

    </ContentPage.Content>
</ContentPage>