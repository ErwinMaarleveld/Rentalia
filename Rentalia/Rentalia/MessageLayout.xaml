<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rentalia.MessageLayout">
  <ContentView.Content>
      <StackLayout>
          <Label Text="hier komt afzender + onderwerp" />
            <Entry x:Name="text" FontSize="Small" Placeholder="Bericht" PlaceholderColor="Black" TextColor="Black" BackgroundColor="OrangeRed" />
            <Button Text="Verstuur"
                   FontSize="Small"
                    Clicked="VerstuurBericht"
            BackgroundColor="OrangeRed"
                    BorderColor="Black"
                    Scale="2"
                    Grid.Row="4"
                   Grid.Column="2"
                    BorderWidth="1"/>
        </StackLayout>
  </ContentView.Content>
</ContentView>